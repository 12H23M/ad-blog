---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Disclaimer | TradeLog.dev" description="TradeLog.dev 면책조항 및 투자 위험 고지" noindex={true}>
  <article class="static-page">
    <h1 data-i18n-ko="면책조항" data-i18n-en="Disclaimer">면책조항</h1>
